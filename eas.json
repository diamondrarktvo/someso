{
   "cli": {
      "version": ">= 12.4.0",
      "appVersionSource": "remote"
   },
   "build": {
      "development": {
         "developmentClient": true,
         "distribution": "internal",
         "ios": {
            "simulator": true
         }
      },
      "preview": {
         "android": {
            "buildType": "apk"
         }
      },
      "preview2": {
         "android": {
            "gradleCommand": ":app:assembleRelease"
         }
      },
      "production": {
         "android": {
            "gradleCommand": ":app:assembleRelease"
         }
      }
   }
}
